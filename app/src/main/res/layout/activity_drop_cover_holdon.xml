<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DropCoverHoldon"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="wrap_content"
            android:layout_height="290dp"
            android:scaleType="fitStart"
            android:src="@drawable/dropcover"
            tools:ignore="MissingConstraints">


        </pl.droidsonroids.gif.GifImageView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Earthquake early warning gives people time to drop, cover and hold on until the shaking stops, preventing injuries. (Animation courtesy of Google)"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:fontFamily="serif"
            android:textSize="8sp">

        </TextView>



    </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
             android:text="Earthquake: Duck, Cover, and Hold Tips"/>


       







    </ScrollView>
    </LinearLayout>
</LinearLayout>